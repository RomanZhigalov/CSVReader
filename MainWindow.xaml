<Window x:Class="CSVReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400" MinHeight="500" MinWidth="400">
    <Grid>
        <StackPanel x:Name="stackPanel" Margin="0,0,0,165" Height="320">
            <DataGrid x:Name="MainDataGrid" Height="320"/>
        </StackPanel>
        <Grid Margin="0,320,0,0">
            <Button Content="Load CSV" HorizontalAlignment="Right" Margin="0,0,45,0" VerticalAlignment="Center" Height="50" Width="100" Click="Load_Button_Click"/>
            <Button Content="Save CSV" HorizontalAlignment="Left" Margin="45,0,0,0" VerticalAlignment="Center" Height="50" Width="100" Click="Save_Button_Click"/>
            <Button Content="Clear" HorizontalAlignment="Right" Margin="0,0,15,15" VerticalAlignment="Bottom" Click="Clear_Button_Click"/>
        </Grid>
    </Grid>
</Window>
